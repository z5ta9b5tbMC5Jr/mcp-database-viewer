# Configurações do Servidor
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Configurações de Banco de Dados - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=test_db

# Configurações de Banco de Dados - PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=password
PG_DATABASE=test_db

# Configurações de Banco de Dados - SQL Server
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASSWORD=Password123!
MSSQL_DATABASE=test_db

# Configurações de Banco de Dados - MongoDB
MONGO_URL=mongodb://localhost:27017
MONGO_DATABASE=test_db

# Configurações de Banco de Dados - SQLite
SQLITE_DATABASE=./data/database.sqlite

# Configurações de Segurança
ENABLE_AUTH=false
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1d

# Configurações de CORS
CORS_ORIGIN=*

# Limites de Requisição
REQUEST_LIMIT=100mb

# Timeouts de Banco de Dados (ms)
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Configurações de Pool de Conexões
DB_POOL_MIN=2
DB_POOL_MAX=10
